<div class="custom-banner-section">
  <!-- Top frame -->
  <div class="top-frame-background" style="background-image: url('{{ section.settings.pattern_image | image_url: width: 2000 }}');"></div>

  <!-- Content Area -->
  <div class="content-background-area">
    <div class="banner-content">
      <h1 class="main-heading">{{ section.settings.heading }}</h1>
      <div class="subheading">{{ section.settings.subheading }}</div>
      <div class="banner-buttons">
        <a href="{{ section.settings.button_link }}" class="shop-now-banner-btn">
          SHOP NOW <span>â†’</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom frame (added new block) -->
  <div class="bottom-frame-background" style="background-image: url('{{ section.settings.pattern_image | image_url: width: 2000 }}');"></div>

  <!-- Conclusion -->
  <div class="conclusion-text">
    {{ section.settings.conclusion_text }}
  </div>
</div>

<style>
  .custom-banner-section {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .top-frame-background {
    width: 100%;
    height: 300px;
    background-size: auto 100%;
    background-position: center bottom;
    background-repeat: repeat-x;
    background-color: #f7e7d9;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  .content-background-area {
    width: 100%;
    background-color: #f7e7d9;
    padding: 50px 20px;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .banner-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .main-heading {
    font-family: 'Helvetica', Arial, sans-serif;
    font-size: 3.5em;
    font-weight: bold;
    margin-bottom: 20px;
    color: black;
  }

  .subheading {
    font-family: 'Helvetica', Arial, sans-serif;
    font-size: 1.2em;
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 1.5;
    color: black;
  }

  .banner-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  /* Button Styles */
  .shop-now-banner-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: black;
    color: white;
    font-family: 'Helvetica', Arial, sans-serif;
    font-size: 1em;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 30px;
    border: none;
    cursor: pointer;
    transition: color 0.3s ease;
    z-index: 1;
  }

  .shop-now-banner-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544;
    transition: left 0.4s ease;
    z-index: -1;
  }

  .shop-now-banner-btn:hover {
    color: black;
  }

  .shop-now-banner-btn:hover::before {
    left: 0;
  }

  .shop-now-banner-btn span {
    margin-left: 12px;
    font-size: 1.2em;
  }

  /* Bottom frame styles */
  .bottom-frame-background {
    width: 100%;
    height: 120px; /* adjust size of bottom frame */
    background-size: auto 100%;
    background-position: right top; /* aligned bottom-right */
    background-repeat: repeat-x;
    background-color: #f7e7d9;
    position: relative;
    z-index: 1;
  }

  .conclusion-text {
    text-align: center;
    width: 100%;
    padding: 20px 0;
    font-family: 'Helvetica', Arial, sans-serif;
    font-size: 0.8em;
    color: #555;
    background-color: #f7e7d9;
  }

  @media screen and (max-width: 768px) {
    .main-heading { font-size: 2.5em; }
    .subheading { font-size: 1em; }
    .banner-buttons { flex-direction: column; gap: 10px; }
    .top-frame-background { height: 200px; }
    .bottom-frame-background { height: 80px; }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "pattern_image",
      "label": "Frame Pattern Image",
      "info": "Upload the frame.svg image. It will repeat across top & bottom."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "conclusion_text",
      "label": "Conclusion Text Below Banner",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
