<div class="custom-banner-section">
  <div class="top-frame-background" style="background-image: url('{{ section.settings.top_pattern_image | image_url: width: 2000 }}');">
  </div>
  <div class="content-background-area">
    <div class="banner-content">
      <h1 class="main-heading">{{ section.settings.heading }}</h1>
      <div class="subheading">{{ section.settings.subheading }}</div>
      <div class="banner-buttons">
        <a href="{{ section.settings.button_link }}" class="shop-now-banner-btn">
          SHOP NOW <span>â†’</span>
        </a>
      </div>
    </div>
  </div>
  <div class="conclusion-text">
    {{ section.settings.conclusion_text }}
  </div>
  <div class="down-frame-background" style="background-image: url('{{ section.settings.down_pattern_image | image_url: width: 890 }}');">
  </div>
</div>

<style>
  .custom-banner-section {
    position: relative;
    width: 100%;
    min-height: 700px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center; 
    background-color: white;     overflow: hidden;   }

  .top-frame-background {
    width: 100%;
    height: 390px;     background-size: auto 100%;     background-position: center bottom;     background-repeat: repeat-x;     overflow: hidden;
    position: relative;
    z-index: 1;   }

  .content-background-area {
    width: 100%;
    padding-top: 50px;     padding-bottom: 50px;     display: flex;
    flex-direction: column;     justify-content: flex-end;     align-items: flex-start;     text-align: left;     position: relative;
    z-index: 2;     flex-grow: 1;     padding-left: 67px;     box-sizing: border-box;   }

  .banner-content {
    max-width: 900px;     padding: 0;
  }

  .main-heading {
        width: 459px;     height: 70px;     font-family: 'Jost', sans-serif;
    font-weight: 500;     font-size: 70px;     line-height: 100%;     letter-spacing: 0px;     color: black;
    margin-bottom: 20px;
  }

  .subheading {
        width: 483px;     height: 84px;     font-family: 'Jost', sans-serif;
    font-weight: 400;     font-size: 20px;     line-height: 140%;     letter-spacing: 0px;     color: black;
    margin: 0 0 40px 0;   }

  .banner-buttons {
    display: flex;
    justify-content: flex-start;     gap: 20px;
  }

    .shop-now-banner-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: black;     color: white;
    font-family: 'Helvetica', Helvetica, Arial, sans-serif;     font-size: 1em;     font-weight: 700;     letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 30px;     border: none;
    cursor: pointer;
    transition: color 0.3s ease;     z-index: 1;   }

  .shop-now-banner-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544;     transition: left 0.4s ease;     z-index: -1;   }

  .shop-now-banner-btn:hover {
    color: black;   }

  .shop-now-banner-btn:hover::before {
    left: 0;   }

  .shop-now-banner-btn span {
    margin-left: 12px;     font-size: 1.2em;   }

  .conclusion-text {
        width: 100%;     height: 34px;     padding: 10px 50px;     background-color: #F5F5F5;     text-align: center;     font-family: 'Helvetica', Helvetica, Arial, sans-serif;     font-size: 0.8em;     color: #555;
    position: relative;     z-index: 3;
    box-sizing: border-box;     display: flex;     align-items: center;     justify-content: center;   }

    .down-frame-background {
    position: absolute;
    bottom: 0;     right: 0;     width: 890px;     height: 402px;     background-size: cover;     background-position: center;     background-repeat: no-repeat;     z-index: 0;     pointer-events: none;   }


    @media screen and (max-width: 768px) {
    .main-heading {
      font-size: 2.5em;       width: auto;       height: auto;
    }
    .subheading {
      font-size: 1em;       width: auto;       height: auto;
      margin: 0 auto 20px auto;     }
    .banner-buttons { flex-direction: column; gap: 10px; justify-content: center; }
    .top-frame-background {
      height: 250px;     }
    .down-frame-background {
      width: 100%;       height: 250px;       background-size: contain;       background-position: bottom right;     }
    .content-background-area {
      padding-left: 20px;       padding-right: 20px;       text-align: center;       align-items: center;     }
    .custom-banner-section {
      min-height: 500px;       padding-left: 0;       padding-right: 0;
    }
    .conclusion-text {
      padding: 10px 20px;       height: auto;     }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_pattern_image",
      "label": "Top Frame Pattern Image",
      "info": "Upload the image for the repeating top frame (e.g., frame.svg)."
    },
    {
      "type": "image_picker",
      "id": "down_pattern_image",
      "label": "Bottom-Right Frame Image",
      "info": "Upload the image for the single frame in the bottom-right (e.g., frame_part_2.svg)."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination<br>Explore our curated selection and find the perfect gifts to<br>delight your loved ones this holiday season</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "conclusion_text",
      "label": "Conclusion Text Below Banner",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
