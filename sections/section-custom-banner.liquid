<div class="custom-banner-section" style="background-image: url('{{ section.settings.pattern_image | image_url: width: 2000 }}');">
  <div class="banner-content">
    <h1 class="main-heading">{{ section.settings.heading }}</h1>
    <div class="subheading">{{ section.settings.subheading }}</div>
    <div class="banner-buttons">
      <a href="{{ section.settings.button_link }}" class="shop-now-banner-btn">
        SHOP NOW <span>â†’</span>
      </a>
    </div>
  </div>
  <div class="conclusion-text">
    {{ section.settings.conclusion_text }}
  </div>
</div>

<style>
  .custom-banner-section {
    position: relative;
    width: 100%;
    min-height: 700px; /* Adjust height to fit your content and background */
    display: flex;
    flex-direction: column; /* Stack content and push to bottom-left */
    justify-content: flex-end; /* Push content block to the bottom */
    align-items: flex-start; /* Align content block to the left */
    overflow: hidden; /* Important for background repetition and content fitting */

    /* Background pattern styles */
    background-color: white; /* Explicitly white background color */
    background-size: auto 100%; /* Scale height to 100% of container, auto width to maintain aspect ratio */
    background-position: center; /* Center the pattern horizontally and vertically within the section */
    background-repeat: repeat-x; /* Repeats horizontally */

    padding-left: 5%; /* Left padding for content block */
    padding-right: 5%; /* Right padding for content block */
    padding-bottom: 50px; /* Space for the conclusion text at the very bottom */
    box-sizing: border-box; /* Include padding in element's total height */
  }

  .banner-content {
    /* Content (heading, subheading, button) positioning */
    position: relative;
    z-index: 2; /* Ensure content is above background */
    margin-top: auto; /* Push this content block to the bottom when flex-end is used on parent */
    margin-bottom: 0; /* No extra space below content */
    padding: 20px 0; /* Internal vertical padding for text/button, horizontal padding from .custom-banner-section */
    max-width: 900px; /* Limit content width for better readability */
    text-align: left; /* Ensure inner text alignment is left */
    color: black; /* Ensure text is visible against white background */
  }

  .main-heading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Use actual font from Figma */
    font-size: 3.5em; /* Adjust to match Figma */
    font-weight: bold;
    margin-bottom: 20px;
    color: black;
  }

  .subheading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Use actual font from Figma */
    font-size: 1.2em; /* Adjust to match Figma */
    max-width: 600px; /* Control width of the text block */
    margin: 0 0 40px 0; /* Removed auto margins for left alignment */
    line-height: 1.5;
    color: black;
  }

  .banner-buttons {
    display: flex;
    justify-content: flex-start; /* Align buttons to the left */
    gap: 20px;
  }

  /* SHOP NOW Button Styles (black to yellow slide-in) */
  .shop-now-banner-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: black; /* Initial color */
    color: white;
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Keep font consistent or define in theme settings */
    font-size: 1em; /* Adjust as needed */
    font-weight: 700; /* Bold */
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 30px; /* Adjust padding */
    border: none;
    cursor: pointer;
    transition: color 0.3s ease; /* Transition for text color */
    z-index: 1; /* Ensure text is above ::before pseudo-element */
  }

  .shop-now-banner-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544; /* Yellow background for hover */
    transition: left 0.4s ease; /* Transition for the slide-in effect */
    z-index: -1; /* Place behind button text */
  }

  .shop-now-banner-btn:hover {
    color: black; /* Text becomes black on hover */
  }

  .shop-now-banner-btn:hover::before {
    left: 0; /* Slides the yellow background in */
  }

  .shop-now-banner-btn span {
    margin-left: 12px; /* Space between text and arrow */
    font-size: 1.2em; /* Arrow size */
  }

  .conclusion-text {
    text-align: center;
    width: 100%; /* Ensure it spans full width */
    padding: 20px 0; /* Add some padding */
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Adjust to Figma */
    font-size: 0.8em; /* Adjust as needed */
    color: #555;
    background-color: transparent; /* This text is overlaid on the pattern, so its background should be transparent */
    position: absolute; /* Position relative to .custom-banner-section */
    bottom: 0; /* Align to the bottom of the section */
    left: 50%;
    transform: translateX(-50%);
    z-index: 3; /* Ensure it's above other elements if needed */
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .main-heading { font-size: 2.5em; }
    .subheading { font-size: 1em; }
    .banner-buttons { flex-direction: column; gap: 10px; justify-content: center; } /* Center buttons on mobile */
    .custom-banner-section {
      min-height: 500px; /* Adjust height on smaller screens */
      padding-left: 5%; /* Maintain padding on smaller screens */
      padding-right: 5%;
    }
    .banner-content {
      text-align: center; /* Center text on mobile */
      padding: 0; /* Remove internal padding on mobile, section padding will apply */
    }
    .subheading {
      margin: 0 auto 40px auto; /* Re-center subheading on mobile */
    }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "pattern_image",
      "label": "Background pattern image",
      "info": "Upload the frame.svg image. It will repeat across the entire banner background."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "conclusion_text",
      "label": "Conclusion Text Below Banner",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
