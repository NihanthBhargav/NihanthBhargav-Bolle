<div class="custom-banner-section">
  <div class="background-pattern" style="background-image: url('{{ section.settings.pattern_image | image_url: width: 1440 }}');">
    <div class="banner-content">
      <h1 class="main-heading">{{ section.settings.heading }}</h1>
      <div class="subheading">{{ section.settings.subheading }}</div>
      <div class="banner-buttons">
        <a href="{{ section.settings.button_link }}" class="shop-now-banner-btn">
          SHOP NOW <span>â†’</span>
        </a>
      </div>
    </div>
  </div>
  <div class="conclusion-text">
    {{ section.settings.conclusion_text }}
  </div>
</div>

<style>
  .custom-banner-section {
    position: relative;
    /* Height will be managed by background-pattern or content */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-bottom: 50px; /* Space for the conclusion text */
    overflow: hidden; /* Ensure nothing spills out */
  }

  .background-pattern {
    background-size: auto 100%; /* Or 'contain' if the whole image needs to fit. 'auto 100%' stretches height, maintains aspect ratio */
    background-position: center top; /* Align to center horizontally, top vertically */
    background-repeat: repeat-x; /* Repeats horizontally as seen in Figma */
    width: 100%;
    min-height: 600px; /* Minimum height for the banner area. Adjust as needed. */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1; /* Ensure pattern is behind content */
  }

  .banner-content {
    padding-top: 50px; /* Adjust content position if needed */
    position: relative;
    z-index: 2; /* Ensure content is above pattern */
  }

  .main-heading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Example font, adjust to Figma */
    font-size: 3.5em; /* Adjust to match Figma */
    font-weight: bold;
    margin-bottom: 20px;
    color: black;
  }

  .subheading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Example font, adjust to Figma */
    font-size: 1.2em; /* Adjust to match Figma */
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 1.5;
    color: black;
  }

  .banner-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  /* SHOP NOW Button Styles (similar to CHOOSE GIFT from header) */
  .shop-now-banner-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: black; /* Initial color */
    color: white;
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Keep font consistent or define in theme settings */
    font-size: 1em; /* Adjust as needed */
    font-weight: 700; /* Bold */
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 30px; /* Adjust padding */
    border: none;
    cursor: pointer;
    transition: color 0.3s ease; /* Transition for text color */
    z-index: 1;
  }

  .shop-now-banner-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544; /* Yellow background for hover */
    transition: left 0.4s ease; /* Transition for the slide-in effect */
    z-index: -1;
  }

  .shop-now-banner-btn:hover {
    color: black; /* Text becomes black on hover */
  }

  .shop-now-banner-btn:hover::before {
    left: 0; /* Slides the yellow background in */
  }

  .shop-now-banner-btn span {
    margin-left: 12px;
    font-size: 1.2em;
  }

  .conclusion-text {
    text-align: center;
    margin-top: 30px; /* Space between banner and text */
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Adjust to Figma */
    font-size: 0.8em; /* Adjust as needed */
    color: #555;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .main-heading { font-size: 2.5em; }
    .subheading { font-size: 1em; }
    .banner-buttons { flex-direction: column; gap: 10px; }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "pattern_image",
      "label": "Background pattern image",
      "info": "Upload the repeating background image (e.g., Frame.svg)."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover joy: Your Ultimate Holiday Gift Destination.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "conclusion_text",
      "label": "Conclusion Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
