<div class="custom-banner-section">
  <div class="top-frame-background" style="background-image: url('{{ section.settings.pattern_image | image_url: width: 2000 }}');">
    <!-- This div will hold the repeating pattern at the top -->
  </div>
  <div class="content-background-area">
    <div class="banner-content">
      <h1 class="main-heading">{{ section.settings.heading }}</h1>
      <div class="subheading">{{ section.settings.subheading }}</div>
      <div class="banner-buttons">
        <a href="{{ section.settings.button_link }}" class="shop-now-banner-btn">
          SHOP NOW <span>â†’</span>
        </a>
      </div>
    </div>
  </div>
  <div class="conclusion-text">
    {{ section.settings.conclusion_text }}
  </div>
</div>

<style>
  .custom-banner-section {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* Removed background-color here, as it's now applied to content-background-area */
  }

  .top-frame-background {
    width: 100%;
    height: 300px; /* Adjust height based on how much of the frame should be visible at the top */
    background-size: auto 100%; /* Scale height to 100%, auto width to maintain aspect ratio */
    background-position: center bottom; /* Position frame to show bottom part, as seen in image */
    background-repeat: repeat-x; /* Repeats horizontally */
    background-color: #f7e7d9; /* Base color for the top frame area, matching the overall theme's light background */
    overflow: hidden; /* Ensure pattern doesn't spill */
    position: relative;
    z-index: 1; /* Keep it below content if there are overlaps */
  }

  .content-background-area {
    width: 100%;
    background-color: #f7e7d9; /* Solid background for the content section (adjust to Figma's exact color) */
    padding-top: 50px; /* Padding above heading */
    padding-bottom: 50px; /* Padding below button */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 2; /* Ensure content area is above the frame below it if any */
  }

  .banner-content {
    max-width: 900px; /* Limit content width for better readability */
    padding: 0 20px; /* Horizontal padding for smaller screens */
  }

  .main-heading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Use actual font from Figma */
    font-size: 3.5em; /* Adjust to match Figma */
    font-weight: bold;
    margin-bottom: 20px;
    color: black;
  }

  .subheading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Use actual font from Figma */
    font-size: 1.2em; /* Adjust to match Figma */
    max-width: 600px; /* Control width of the text block */
    margin: 0 auto 40px;
    line-height: 1.5;
    color: black;
  }

  .banner-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  /* SHOP NOW Button Styles (black to yellow slide-in) */
  .shop-now-banner-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: black; /* Initial color */
    color: white;
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Keep font consistent or define in theme settings */
    font-size: 1em; /* Adjust as needed */
    font-weight: 700; /* Bold */
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 30px; /* Adjust padding */
    border: none;
    cursor: pointer;
    transition: color 0.3s ease; /* Transition for text color */
    z-index: 1; /* Ensure text is above ::before pseudo-element */
  }

  .shop-now-banner-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544; /* Yellow background for hover */
    transition: left 0.4s ease; /* Transition for the slide-in effect */
    z-index: -1; /* Place behind button text */
  }

  .shop-now-banner-btn:hover {
    color: black; /* Text becomes black on hover */
  }

  .shop-now-banner-btn:hover::before {
    left: 0; /* Slides the yellow background in */
  }

  .shop-now-banner-btn span {
    margin-left: 12px; /* Space between text and arrow */
    font-size: 1.2em; /* Arrow size */
  }

  .conclusion-text {
    text-align: center;
    width: 100%; /* Ensure it spans full width */
    padding: 20px 0; /* Add some padding */
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Adjust to Figma */
    font-size: 0.8em; /* Adjust as needed */
    color: #555;
    background-color: #f7e7d9; /* Match main banner background if needed */
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .main-heading { font-size: 2.5em; }
    .subheading { font-size: 1em; }
    .banner-buttons { flex-direction: column; gap: 10px; }
    .top-frame-background {
      height: 200px; /* Adjust height on smaller screens */
    }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "pattern_image",
      "label": "Top Frame Pattern Image",
      "info": "Upload the frame.svg image. It will repeat across the top section."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "conclusion_text",
      "label": "Conclusion Text Below Banner",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
