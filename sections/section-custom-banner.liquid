<div class="custom-banner-section">
  <div class="background-wrapper">
    <div class="background-pattern" style="background-image: url('{{ section.settings.pattern_image | image_url: width: 2000 }}');">
      <!-- The pattern image will repeat in this div -->
    </div>
    <div class="banner-content">
      <h1 class="main-heading">{{ section.settings.heading }}</h1>
      <div class="subheading">{{ section.settings.subheading }}</div>
      <div class="banner-buttons">
        <a href="{{ section.settings.button_link }}" class="shop-now-banner-btn">
          SHOP NOW <span>â†’</span>
        </a>
      </div>
    </div>
  </div>
  <div class="conclusion-text">
    {{ section.settings.conclusion_text }}
  </div>
</div>

<style>
  .custom-banner-section {
    position: relative;
    width: 100%;
    /* No fixed height here, let content define it or set min-height on background-wrapper */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-bottom: 50px; /* Space for the conclusion text */
    overflow: hidden; /* Ensure nothing spills out */
    background-color: white; /* Base background color behind the pattern (adjust to Figma's exact color) */
  }

  .background-wrapper {
    position: relative;
    width: 100%;
    min-height: 600px; /* Adjust this height to match the overall banner height from Figma */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    z-index: 1;
  }

  .background-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: auto 100%; /* Scales the height to 100% of container, auto width to maintain aspect ratio */
    background-position: center; /* Centers the pattern horizontally */
    background-repeat: repeat-x; /* Repeats horizontally */
    z-index: -1; /* Place behind content */
  }

  .banner-content {
    /* Content (heading, subheading, button) positioning */
    position: relative;
    z-index: 2; /* Ensure content is above background pattern */
    padding-top: 50px; /* Adjust vertical position within the wrapper if needed */
    padding-bottom: 50px; /* Adjust vertical position within the wrapper if needed */
  }

  .main-heading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Use actual font from Figma if different */
    font-size: 3.5em; /* Adjust to match Figma */
    font-weight: bold;
    margin-bottom: 20px;
    color: black;
  }

  .subheading {
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Use actual font from Figma if different */
    font-size: 1.2em; /* Adjust to match Figma */
    max-width: 600px; /* Control width of the text block */
    margin: 0 auto 40px;
    line-height: 1.5;
    color: black;
  }

  .banner-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  /* SHOP NOW Button Styles (black to yellow slide-in) */
  .shop-now-banner-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: black; /* Initial color */
    color: white;
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Keep font consistent or define in theme settings */
    font-size: 1em; /* Adjust as needed */
    font-weight: 700; /* Bold */
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 30px; /* Adjust padding */
    border: none;
    cursor: pointer;
    transition: color 0.3s ease; /* Transition for text color */
    z-index: 1; /* Ensure text is above ::before pseudo-element */
  }

  .shop-now-banner-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544; /* Yellow background for hover */
    transition: left 0.4s ease; /* Transition for the slide-in effect */
    z-index: -1; /* Place behind button text */
  }

  .shop-now-banner-btn:hover {
    color: black; /* Text becomes black on hover */
  }

  .shop-now-banner-btn:hover::before {
    left: 0; /* Slides the yellow background in */
  }

  .shop-now-banner-btn span {
    margin-left: 12px; /* Space between text and arrow */
    font-size: 1.2em; /* Arrow size */
  }

  .conclusion-text {
    text-align: center;
    margin-top: 30px; /* Space below the main banner area */
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Adjust to Figma */
    font-size: 0.8em; /* Adjust as needed */
    color: #555;
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .main-heading { font-size: 2.5em; }
    .subheading { font-size: 1em; }
    .banner-buttons { flex-direction: column; gap: 10px; }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "pattern_image",
      "label": "Background pattern image",
      "info": "Upload the frame.svg image. It will repeat to create the background effect."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "conclusion_text",
      "label": "Conclusion Text Below Banner",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
