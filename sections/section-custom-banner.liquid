<div class="custom-banner-section">
  <div class="top-frame-background" style="background-image: url('{{ section.settings.top_pattern_image | image_url: width: 2000 }}');">
    <!-- This div will hold the repeating pattern at the top -->
  </div>
  <div class="content-background-area">
    <div class="banner-content">
      <h1 class="main-heading">{{ section.settings.heading }}</h1>
      <div class="subheading">{{ section.settings.subheading }}</div>
      <div class="banner-buttons">
        <a href="{{ section.settings.button_link }}" class="shop-now-banner-btn">
          SHOP NOW <span>â†’</span>
        </a>
      </div>
    </div>
  </div>
  <div class="conclusion-text">
    {{ section.settings.conclusion_text }}
  </div>
  <div class="down-frame-background" style="background-image: url('{{ section.settings.down_pattern_image | image_url: width: 890 }}');">
    <!-- This div will hold the frame image at the bottom right -->
  </div>
</div>

<style>
  .custom-banner-section {
    position: relative;
    width: 100%;
    min-height: 700px; /* Base height for the entire banner section */
    display: flex;
    flex-direction: column; /* Stacks children vertically */
    justify-content: space-between; /* Pushes top-frame to top, content-area and conclusion to bottom */
    align-items: center; /* Default for horizontal centering of main elements, adjusted inside */

    background-color: white; /* Explicitly white background color */
    overflow: hidden; /* Ensure patterns and content fit within */
  }

  .top-frame-background {
    width: 100%;
    height: 390px; /* Specific height as per your request */
    background-size: auto 100%; /* Scale height to 100%, auto width to maintain aspect ratio */
    background-position: center bottom; /* Position frame to show bottom part */
    background-repeat: repeat-x; /* Repeats horizontally */
    overflow: hidden;
    position: relative;
    z-index: 1; /* Keep it below content if there are overlaps */
  }

  .content-background-area {
    width: 100%;
    padding-top: 50px; /* Padding above heading */
    padding-bottom: 50px; /* Padding below button */
    display: flex;
    flex-direction: column; /* Stack content elements vertically */
    justify-content: flex-end; /* Pushes content to the bottom of this area */
    align-items: flex-start; /* Aligns content to the left of this area */
    text-align: left; /* Aligns text within content block to the left */
    position: relative;
    z-index: 2; /* Ensure content area is above other elements */
    flex-grow: 1; /* Allow content area to take available vertical space */
    padding-left: 67px; /* Explicit left padding for content block, based on your 'left: 67px' */
    box-sizing: border-box; /* Include padding in width */
  }

  .banner-content {
    max-width: 900px; /* Limit content width for better readability */
    padding: 0;
  }

  .main-heading {
    /* Specific styles for the title */
    width: 459px; /* As per your request */
    height: 70px; /* As per your request */
    font-family: 'Jost', sans-serif;
    font-weight: 500; /* Medium weight */
    font-size: 70px; /* As per your request */
    line-height: 100%; /* As per your request */
    letter-spacing: 0px; /* As per your request */
    color: black;
    margin-bottom: 20px;
  }

  .subheading {
    /* Specific styles for the subtext */
    width: 483px; /* As per your request */
    height: 84px; /* As per your request */
    font-family: 'Jost', sans-serif;
    font-weight: 400; /* Regular weight */
    font-size: 20px; /* As per your request */
    line-height: 140%; /* As per your request */
    letter-spacing: 0px; /* As per your request */
    color: black;
    margin: 0 0 40px 0; /* Align left, specific bottom margin */
  }

  .banner-buttons {
    display: flex;
    justify-content: flex-start; /* Align buttons to the left */
    gap: 20px;
  }

  /* SHOP NOW Button Styles (black to yellow slide-in) */
  .shop-now-banner-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: black; /* Initial color */
    color: white;
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Keep font consistent or define in theme settings */
    font-size: 1em; /* Adjust as needed */
    font-weight: 700; /* Bold */
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 30px; /* Adjust padding */
    border: none;
    cursor: pointer;
    transition: color 0.3s ease; /* Transition for text color */
    z-index: 1; /* Ensure text is above ::before pseudo-element */
  }

  .shop-now-banner-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #FFF544; /* Yellow background for hover */
    transition: left 0.4s ease; /* Transition for the slide-in effect */
    z-index: -1; /* Place behind button text */
  }

  .shop-now-banner-btn:hover {
    color: black; /* Text becomes black on hover */
  }

  .shop-now-banner-btn:hover::before {
    left: 0; /* Slides the yellow background in */
  }

  .shop-now-banner-btn span {
    margin-left: 12px; /* Space between text and arrow */
    font-size: 1.2em; /* Arrow size */
  }

  .conclusion-text {
    /* Specific styles for the conclusion text container */
    width: 100%; /* Full width as per request */
    height: 34px; /* Specific height as per request */
    padding: 10px 50px; /* Specific padding as per request */
    background-color: #F5F5F5; /* Specific light grey background */
    text-align: center; /* Center text within its own div */
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Adjust to Figma */
    font-size: 0.8em; /* Adjust as needed */
    color: #555;
    position: relative; /* Flows with the content */
    z-index: 3;
    box-sizing: border-box; /* Include padding in height */
    display: flex; /* Use flexbox for vertical alignment */
    align-items: center; /* Vertically center text if height is greater than line-height */
    justify-content: center; /* Horizontally center text */
  }

  /* Styles for the bottom-right frame (using a separate image) */
  .down-frame-background {
    position: absolute;
    bottom: 0; /* Position at the bottom of the section */
    right: 0; /* Position at the right of the section */
    width: 890px; /* As per your request */
    height: 402px; /* As per your request */
    background-size: cover; /* Ensures the image covers the area, might crop */
    background-position: center; /* Centers the background image within this div */
    background-repeat: no-repeat; /* Ensure it does not repeat */
    z-index: 0; /* Place behind all other content and top frame */
    pointer-events: none; /* Allows clicks/interactions on elements behind it */
  }


  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .main-heading {
      font-size: 2.5em; /* Adjust font size for mobile */
      width: auto; /* Remove fixed width for responsiveness */
      height: auto;
    }
    .subheading {
      font-size: 1em; /* Adjust font size for mobile */
      width: auto; /* Remove fixed width for responsiveness */
      height: auto;
      margin: 0 auto 20px auto; /* Center on mobile, adjust margin */
    }
    .banner-buttons { flex-direction: column; gap: 10px; justify-content: center; }
    .top-frame-background {
      height: 250px; /* Adjust height on smaller screens */
    }
    .down-frame-background {
      width: 100%; /* Make it full width on small screens */
      height: 250px; /* Adjust height on smaller screens */
      background-size: contain; /* Contain the image on mobile if it looks better */
      background-position: bottom right; /* Keep it at bottom right */
    }
    .content-background-area {
      padding-left: 20px; /* Adjust left padding for mobile */
      padding-right: 20px; /* Add right padding for mobile */
      text-align: center; /* Center text on mobile */
      align-items: center; /* Center items on mobile */
    }
    .custom-banner-section {
      min-height: 500px; /* Adjust overall height on smaller screens */
      padding-left: 0; /* Remove overall section padding on mobile if content-background-area has it */
      padding-right: 0;
    }
    .conclusion-text {
      padding: 10px 20px; /* Adjust padding for mobile */
      height: auto; /* Allow height to adjust for content on mobile */
    }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_pattern_image",
      "label": "Top Frame Pattern Image",
      "info": "Upload the image for the repeating top frame (e.g., frame.svg)."
    },
    {
      "type": "image_picker",
      "id": "down_pattern_image",
      "label": "Bottom-Right Frame Image",
      "info": "Upload the image for the single frame in the bottom-right (e.g., frame_part_2.svg)."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination<br>Explore our curated selection and find the perfect gifts to<br>delight your loved ones this holiday season</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "conclusion_text",
      "label": "Conclusion Text Below Banner",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
