      "id": "image_3",
      "label": "Image 3 (Top Right)"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4 (Bottom Left)"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5 (Bottom Middle)"
    },
    {
      "type": "image_picker",
      "id": "image_6",
