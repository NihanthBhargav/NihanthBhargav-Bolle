<div class="image-grid-section">
  <div class="page-width">
    <div class="grid-header">
      <h2 class="grid-title">{{ section.settings.title }}</h2>
    </div>

    <div class="image-grid-container">
      <div class="grid-item">
        {% if section.settings.image_1 != blank %}
          {{ section.settings.image_1 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item">
        {% if section.settings.image_2 != blank %}
          {{ section.settings.image_2 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item">
        {% if section.settings.image_3 != blank %}
          {{ section.settings.image_3 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item">
        {% if section.settings.image_4 != blank %}
          {{ section.settings.image_4 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item">
        {% if section.settings.image_5 != blank %}
          {{ section.settings.image_5 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item">
        {% if section.settings.image_6 != blank %}
          {{ section.settings.image_6 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .image-grid-section {
    padding: 50px 0;
    background-color: white;
  }

  .page-width {
    /* Ensure page-width itself is centered and has appropriate max-width */
    max-width: 1400px; /* Adjust this to control overall section width */
    margin: 0 auto;
    padding: 0 50px; /* Consistent left and right padding for content inside page-width */
    box-sizing: border-box; /* Include padding in element's total width */
  }

  .grid-header {
    margin-bottom: 40px;
    text-align: left;
  }

  .grid-title {
    /* Text styles as provided */
    width: 372px;
    height: 43px; /* This height might conflict if text wraps due to fixed width */
    font-family: 'Lustria', serif;
    font-weight: 400;
    font-size: 36px;
    line-height: 120%;
    letter-spacing: 0px;
    color: black;
    margin: 0;
  }

  .image-grid-container {
    display: grid;
    /* Define 3 columns with a preferred width of 433px, but allowing flexibility */
    grid-template-columns: repeat(3, minmax(250px, 433px));
    /* The gap of 20px simulates the spacing from your original "left" values */
    gap: 20px;
    justify-content: center; /* This centers the grid within its container */
    align-items: center; /* Vertically centers items within their grid cells */
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    background-color: #f0f0f0; /* Placeholder background */
    display: flex;
    justify-content: center;
    align-items: center;
    /* Use aspect-ratio to maintain proportions instead of fixed height, for responsiveness */
    aspect-ratio: 433 / 444; /* Maintain the desired aspect ratio (width / height) */
    opacity: 1;
  }

  .grid-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover; /* Ensures images cover the area without distortion */
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .placeholder-svg {
    max-width: 50%;
    max-height: 50%;
    opacity: 0.5;
  }

  /* Responsive Design */
  @media screen and (max-width: 1400px) {
    .page-width {
      padding: 0 30px; /* Reduce padding on slightly smaller screens */
    }
    .image-grid-container {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); /* Adjust columns for better fit */
      gap: 15px;
    }
  }

  @media screen and (max-width: 768px) {
    .page-width {
      padding: 0 20px; /* Further reduce padding for mobile */
    }
    .grid-title {
      width: auto; /* Remove fixed width to allow text to wrap */
      height: auto;
      font-size: 28px;
      text-align: center; /* Center title on mobile */
      margin: 0 auto 30px auto; /* Center title and adjust bottom margin */
    }
    .image-grid-container {
      grid-template-columns: 1fr; /* Single column on smallest screens */
      gap: 10px; /* Smaller gap on mobile */
    }
  }
</style>

