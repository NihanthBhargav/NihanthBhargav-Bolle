<div class="image-grid-section">
  <div class="page-width">
    <div class="grid-header">
      <h2 class="grid-title">{{ section.settings.title }}</h2>
    </div>

    <div class="image-grid-absolute-container">
      <div class="grid-item grid-item-1">
        {% if section.settings.image_1 != blank %}
          {{ section.settings.image_1 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item grid-item-2">
        {% if section.settings.image_2 != blank %}
          {{ section.settings.image_2 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item grid-item-3">
        {% if section.settings.image_3 != blank %}
          {{ section.settings.image_3 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item grid-item-4">
        {% if section.settings.image_4 != blank %}
          {{ section.settings.image_4 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item grid-item-5">
        {% if section.settings.image_5 != blank %}
          {{ section.settings.image_5 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="grid-item grid-item-6">
        {% if section.settings.image_6 != blank %}
          {{ section.settings.image_6 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .image-grid-section {
    padding: 50px 0;
    background-color: white;
    position: relative;
  }

  .grid-header {
    padding: 0 50px;
    margin-bottom: 40px;
    text-align: left;
  }

  .grid-title {
    width: 372px;
    height: 43px;
    font-family: 'Lustria', serif;
    font-weight: 400;
    font-size: 36px;
    line-height: 120%;
    letter-spacing: 0px;
    color: black;
    margin: 0;
  }

  .image-grid-absolute-container {
    position: relative;
    width: 1339px;
    height: 908px;
    margin: 0 auto;
    padding: 0 50px;
  }

  .grid-item {
    position: absolute;
    overflow: hidden;
    background-color: #f0f0f0;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 1;
  }

  .grid-item-1 {
    width: 433px;
    height: 444px;
    top: 0;
    left: 0;
  }

  .grid-item-2 {
    width: 433px;
    height: 444px;
    top: 0;
    left: 453px;
  }

  .grid-item-3 {
    width: 433px;
    height: 444px;
    top: 0;
    left: 906px;
  }

  .grid-item-4 {
    width: 433px;
    height: 444px;
    top: 464px;
    left: 0;
  }

  .grid-item-5 {
    width: 433px;
    height: 444px;
    top: 464px;
    left: 453px;
  }

  .grid-item-6 {
    width: 433px;
    height: 444px;
    top: 464px;
    left: 906px;
  }

  .grid-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .placeholder-svg {
    max-width: 50%;
    max-height: 50%;
    opacity: 0.5;
  }

  @media screen and (max-width: 1400px) {
    .image-grid-absolute-container {
      width: 100%;
      height: auto;
      padding: 0 20px;
      position: relative;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
      box-sizing: border-box;
    }

    .grid-item {
      position: static;
      width: auto;
      height: auto;
      aspect-ratio: 433 / 444;
      top: auto;
      left: auto;
    }
  }

  @media screen and (max-width: 768px) {
    .grid-title {
      width: auto;
      height: auto;
      font-size: 28px;
      text-align: center;
    }
    .grid-header {
      padding: 0 20px;
    }
    .image-grid-absolute-container {
      grid-template-columns: 1fr;
      padding: 0 15px;
    }
  }
</style>

