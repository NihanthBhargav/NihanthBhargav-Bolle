<style>
  .image-grid-section {
    padding: 50px 0;
    background-color: white;
  }

  .page-width {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 50px;
    box-sizing: border-box;
  }

  .grid-header {
    margin-bottom: 40px;
    text-align: left;
  }

  .grid-title {
    width: 372px;
    height: 43px;
    font-family: 'Lustria', serif;
    font-weight: 400;
    font-size: 36px;
    line-height: 120%;
    letter-spacing: 0px;
    color: black;
    margin: 0;
  }

  .image-grid-container {
    display: grid;
    grid-template-columns: repeat(3, minmax(250px, 433px));
    gap: 20px;
    justify-content: center;
    align-items: center;
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    background-color: #f0f0f0;
    display: flex;
    justify-content: center;
    align-items: center;
    aspect-ratio: 433 / 444;
    opacity: 1;
  }

  .grid-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .placeholder-svg {
    max-width: 50%;
    max-height: 50%;
    opacity: 0.5;
  }

  /* General styles for all overlay images */
  .grid-overlay-image {
    position: absolute;
    z-index: 9;
    pointer-events: none; /* Allows clicks to pass through to the main image */
    background: white; /* Default background for all overlays */
    border: 1.5px solid black; /* Default border for all overlays */
    border-radius: 50%; /* Make them circular */
    display: flex; /* Use flexbox to center the image within if needed */
    justify-content: center;
    align-items: center;
    opacity: 1; /* Explicitly set opacity as per input */
  }

  /* Specific styles for each overlay image, now using percentages relative to grid-item */
  /* Calculations based on 433x444px grid-item dimensions */
  .grid-overlay-image-1 {
    width: 22px;
    height: 22px;
    /* Calculated from image_f59dab.jpg: top: 238px, left: 256.5px (center of overlay) */
    /* top: (238 / 444) * 100% = 53.60% */
    /* left: (256.5 / 433) * 100% = 59.24% */
    top: 238px;
    left: 256.5px;
    right: 154.5px;
    down: 184px;
    transform: translate(-50%, -50%); /* Center the overlay image on its precise point */
  }

  .grid-overlay-image-2 {
    width: 22px;
    height: 22px;
    /* Example values - will need fine-tuning */
    top: 50%; /* Just example, will depend on visual */
    left: 80%; /* Just example, will depend on visual */
    transform: translate(-50%, -50%);
  }

  .grid-overlay-image-3 {
    width: 22px;
    height: 22px;
    /* Example values - will need fine-tuning */
    top: 20%; /* Example */
    left: 80%; /* Example */
    transform: translate(-50%, -50%);
  }

  .grid-overlay-image-4 {
    width: 22px;
    height: 22px;
    /* Example values - will need fine-tuning */
    top: 80%; /* Example */
    left: 70%; /* Example */
    transform: translate(-50%, -50%);
  }

  .grid-overlay-image-5 {
    width: 22px;
    height: 22px;
    /* Example values - will need fine-tuning */
    top: 85%; /* Example */
    left: 80%; /* Example */
    transform: translate(-50%, -50%);
  }

  .grid-overlay-image-6 {
    width: 22px;
    height: 22px;
    /* Example values - will need fine-tuning */
    top: 90%; /* Example */
    left: 90%; /* Example */
    transform: translate(-50%, -50%);
  }

  /* Responsive Design */
  @media screen and (max-width: 1400px) {
    .page-width {
      padding: 0 30px;
    }
    .image-grid-container {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 15px;
    }
    .grid-item {
      width: auto;
      height: auto;
      aspect-ratio: 433 / 444;
    }
    /* Overlay images will automatically scale and position relative to their grid-item
       because their 'top'/'left' are in percentages and width/height are fixed.
       If they appear too small, increase their fixed 'width'/'height'. */
  }

  @media screen and (max-width: 768px) {
    .page-width {
      padding: 0 20px;
    }
    .grid-title {
      width: auto;
      height: auto;
      font-size: 28px;
      text-align: center;
      margin: 0 auto 30px auto;
    }
    .grid-header {
      padding: 0 20px;
    }
    .image-grid-container {
      grid-template-columns: 1fr;
      gap: 10px;
    }
    /* You might need to adjust the fixed width/height of overlay images for very small screens if they look too big/small */
    .grid-overlay-image {
      width: 20px; /* Example: make them a bit smaller on mobile if needed */
      height: 20px;
    }
  }
</style>

