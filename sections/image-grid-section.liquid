    margin-bottom: 5px;
    padding: 0;
  }

  /* Outer container */
  .color-box {
    position: relative;
    display: flex;
    width: 271px; /* Your specified fixed width */
    max-width: 100%; /* Ensure it shrinks on smaller screens */
    height: 40.4413px;
    border: 0.5px solid #000;
    box-sizing: border-box;
    overflow: hidden;
