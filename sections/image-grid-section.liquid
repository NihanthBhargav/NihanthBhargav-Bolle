          {{ section.settings.image_1 | image_url: width: 600 | image_tag: class: 'grid-image' }}
        {% else %}
          <div class="placeholder-image">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
        {% if section.settings.overlay_image_1 != blank %}
          {# Added grid-overlay-image-1 class for specific styling #}
          {{ section.settings.overlay_image_1 | image_url: width: 200 | image_tag: class: 'grid-overlay-image grid-overlay-image-1' }}
        {% endif %}
      </div>

      <div class="grid-item">
        {% if section.settings.image_2 != blank %}
