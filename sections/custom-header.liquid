<div class="header-section">
  <div class="page-width header-content">
    <div class="header-logo">
      {%- if section.settings.logo_image != blank -%}

        {{ section.settings.logo_image | image_url: width: 200 | image_tag: class: 'tissos-vision-logo' }}
      {%- else -%}
        <h2 class="site-name">{{ shop.name }}</h2>
      {%- endif -%}
    </div>
    <div class="header-info-text">
      {{ section.settings.info_text }}
    </div>
    <div class="header-button">
      {%- if section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="choose-gift-header-btn">
          CHOOSE GIFT <span>â†’</span>
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .header-button {
    display: flex;
    justify-content: flex-end; /* Pushes the button to the right */
    align-items: center; /* Vertically centers the button */
  }

  .header-section {
    background-color: #f0f0f0; /* Light grey background, adjust to match Figma */
    padding: 10px 50px; /* Top/bottom 10px, left/right 50px */
    border-bottom: 1px solid #e0e0e0; /* Subtle border at the bottom */
    width: 100%; /* Ensures it takes full width */
    height: 64px; /* Set fixed height as per request */
    box-sizing: border-box; /* Include padding and border in the element's total width and height */
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1400px; /* Adjust based on your overall layout width */
    margin: 0 auto;
    height: 100%; /* Ensure content fills the header height */
  }

  .header-logo {
    opacity: 1; /* As per your request */
  }

  /* Specific styles for the TISSO VISON logo image */
  .tissos-vision-logo {
    max-width: 151.44px; /* Specific width for the image */
    height: 19px; /* Specific height for the image */
    opacity: 1; /* As per your request */
    /* angle: 0 deg is default, not explicitly needed in CSS */
  }

  .header-logo .site-name {
    font-size: 1.5em;
    font-weight: bold;
    color: #333; /* Default text color if no logo image */
    margin: 0;
  }

  .header-info-text {
    flex-grow: 1; /* Allows text to take up available space */
    /* Specific styles for the middle text */
    width: 260px; /* Fixed width as per request */
    height: 14px; /* Fixed height as per request */
    font-family: 'Jost', sans-serif; /* Set font family as per request */
    font-weight: 400; /* Regular weight as per request */
    font-size: 16px; /* Specific font size as per request */
    line-height: 13.42px; /* Specific line height as per request */
    letter-spacing: 0px; /* Specific letter spacing as per request */
    text-align: center; /* As per your request */
    color: #555;
    /* vertical-align: middle is for inline elements, align-items: center on parent (header-content) already handles vertical alignment */
  }

  /* New styles for the CHOOSE GIFT button with transition */
  .choose-gift-header-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden; /* Important for the slide-in effect */
    background-color: #FFF544; /* Yellow */
    color: #000;
    font-family: 'Helvetica', Helvetica, Arial, sans-serif; /* Keep font consistent or define in theme settings */
    font-size: 0.9em; /* Adjusted to fit header, originally 24px */
    font-weight: 700; /* Bold */
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 10px 20px; /* Adjusted padding to fit header, originally 20px 60px */
    border: none;
    cursor: pointer;
    transition: color 0.3s ease; /* Transition for text color */
    z-index: 1;

    /* Specific styles for the button */
    width: 207px; /* As per your request */
    height: 44px; /* As per your request */
    opacity: 1; /* As per your request */
    /* angle: 0 deg is default */
  }

  .choose-gift-header-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #000; /* Black background for hover */
    transition: left 0.4s ease; /* Transition for the slide-in effect */
    z-index: -1;
  }

  .choose-gift-header-btn:hover {
    color: #fff; /* White text on hover */
  }

  .choose-gift-header-btn:hover::before {
    left: 0; /* Slides the black background in */
  }

  .choose-gift-header-btn span {
    margin-left: 8px; /* Adjusted spacing for the arrow */
    font-size: 1.2em; /* Adjusted arrow size relative to button font size */
  }

  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .header-content {
      flex-direction: column;
      text-align: center;
    }
    .header-info-text {
      margin-top: 10px;
      margin-bottom: 10px;
      width: auto; /* Remove fixed width for responsiveness */
      height: auto; /* Remove fixed height for responsiveness */
      line-height: normal; /* Allow natural line height */
    }
    .choose-gift-header-btn {
      font-size: 0.8em; /* Further reduce font size on small screens */
      padding: 8px 15px; /* Adjust padding on small screens */
      width: auto; /* Remove fixed width for responsiveness */
      height: auto; /* Remove fixed height for responsiveness */
    }
    .tissos-vision-logo {
      max-width: 100px; /* Adjust logo size for mobile */
      height: auto;
    }
  }
</style>

{% schema %}
{
  "name": "Global Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Group-1000007777.svg"
    },
    {
      "type": "text",
      "id": "info_text",
      "label": "Information text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Global Header"
    }
  ]
}
{% endschema %}
